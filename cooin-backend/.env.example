# Environment Configuration Template for Cooin Backend
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL
DATABASE_URL=postgresql://cooin_user:your_secure_password@localhost:5432/cooin_db

# Alternative for development
# DATABASE_URL=postgresql://cooin_dev:cooin_dev_password@localhost:5433/cooin_dev_db

# Database connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis URL for caching and sessions
REDIS_URL=redis://:your_redis_password@localhost:6379/0

# Redis password (used in Docker Compose)
REDIS_PASSWORD=your_secure_redis_password

# =============================================================================
# API SECURITY
# =============================================================================

# Secret key for JWT tokens (REQUIRED - generate a secure random string)
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secure-secret-key-change-this-in-production

# JWT Algorithm
ALGORITHM=HS256

# Token expiration times
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Application name
APP_NAME=Cooin API

# API version
API_VERSION=1.0.0

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:19006

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Maximum file size in bytes (10MB default)
MAX_FILE_SIZE=10485760

# Upload directory
UPLOAD_DIRECTORY=./uploads

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP server settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email sender
EMAIL_FROM=noreply@cooin.app

# =============================================================================
# EXTERNAL APIS
# =============================================================================

# Plaid API (for financial data)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENVIRONMENT=sandbox

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# PRODUCTION DEPLOYMENT
# =============================================================================

# Docker/Production settings
POSTGRES_PASSWORD=your_production_postgres_password
POSTGRES_USER=cooin_user
POSTGRES_DB=cooin_db

# =============================================================================
# TESTING (Development only)
# =============================================================================

# Testing flag
TESTING=false