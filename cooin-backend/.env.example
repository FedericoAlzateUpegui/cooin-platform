# Cooin Backend Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION (Required)
# =============================================================================

# Full database URL (primary method)
DATABASE_URL=postgresql://your_username@localhost:5432/cooin_db

# Individual database connection parameters (alternative method)
DATABASE_HOSTNAME=localhost
DATABASE_PORT=5432
DATABASE_NAME=cooin_db
DATABASE_USERNAME=your_username
DATABASE_PASSWORD=your_secure_password

# =============================================================================
# SECURITY CONFIGURATION (Required)
# =============================================================================

# ⚠️  CRITICAL: Generate a secure SECRET_KEY for production
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
# NEVER use default values in production!
SECRET_KEY=your-secret-key-here-replace-me-with-generated-key

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Cooin API
PROJECT_VERSION=1.0.0

# Debug mode (true for development, false for production)
DEBUG=true

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins - supports both formats:
# JSON array format (recommended):
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8081","http://localhost:19006"]

# OR comma-separated format:
# BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8081,http://localhost:19006

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis URL for caching (optional, falls back to in-memory cache if unavailable)
REDIS_URL=redis://localhost:6379/0

# For Redis with password:
# REDIS_URL=redis://:your_password@localhost:6379/0

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP server settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=True

# Frontend URL for email links (password reset, verification, etc.)
FRONTEND_URL=http://localhost:3000

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# General file upload settings
MAX_UPLOAD_SIZE=5242880
UPLOAD_FOLDER=uploads/
ALLOWED_IMAGE_EXTENSIONS=["jpg","jpeg","png","gif"]
ALLOWED_DOCUMENT_EXTENSIONS=["pdf","doc","docx"]

# Mobile-specific file upload limits
MOBILE_AVATAR_MAX_SIZE=10485760
MOBILE_BANNER_MAX_SIZE=15728640
MOBILE_DOCUMENT_MAX_SIZE=52428800

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================

SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=lax

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# PAGINATION CONFIGURATION
# =============================================================================

DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# Number of requests allowed per window
RATE_LIMIT_REQUESTS=100
# Time window in seconds (3600 = 1 hour)
RATE_LIMIT_WINDOW=3600

# =============================================================================
# MOBILE & PUSH NOTIFICATION CONFIGURATION (Optional)
# =============================================================================

# Apple Push Notification Service (APNS) Configuration
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_BUNDLE_ID=com.cooin.app
APNS_KEY_PATH=

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS_PER_USER=5

# =============================================================================
# EXTERNAL API CONFIGURATION (Optional)
# =============================================================================

EXTERNAL_API_KEY=
EXTERNAL_API_URL=

# =============================================================================
# NOTES
# =============================================================================

# - Required fields must be set for the application to start
# - Optional fields have default values or graceful fallbacks
# - Keep this file secure and never commit .env to version control
# - Update .gitignore to include .env if not already present
