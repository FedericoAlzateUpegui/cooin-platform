# ============================================================================
# COOIN BACKEND - PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# IMPORTANT: Copy this to .env.production and fill in actual values
# NEVER commit .env.production to git!
# ============================================================================

# ============================================================================
# ENVIRONMENT & DEBUG
# ============================================================================
ENVIRONMENT=production
DEBUG=False  # MUST BE FALSE IN PRODUCTION

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL Required)
# ============================================================================
DATABASE_URL=postgresql://cooin_prod_user:<STRONG_PASSWORD>@your-db-host:5432/cooin_prod
DATABASE_HOSTNAME=your-db-host.provider.com
DATABASE_PORT=5432
DATABASE_NAME=cooin_prod
DATABASE_USERNAME=cooin_prod_user
DATABASE_PASSWORD=<GENERATE_STRONG_PASSWORD>

# ============================================================================
# JWT & SECURITY CONFIGURATION
# ============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=<GENERATE_PRODUCTION_SECRET_KEY_32_CHARS>
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_V1_STR=/api/v1
PROJECT_NAME=Cooin API
PROJECT_VERSION=1.0.0

# ============================================================================
# CORS CONFIGURATION (PRODUCTION DOMAINS ONLY)
# ============================================================================
BACKEND_CORS_ORIGINS=["https://app.cooin.com","https://www.cooin.com"]

# ============================================================================
# REDIS CONFIGURATION (With Password)
# ============================================================================
REDIS_URL=redis://:<REDIS_PASSWORD>@your-redis-host:6379/0

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.your-email-provider.com
SMTP_USER=noreply@cooin.com
SMTP_PASSWORD=<SMTP_APP_PASSWORD>

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
MAX_UPLOAD_SIZE=5242880
UPLOAD_FOLDER=/var/www/cooin/uploads/

# ============================================================================
# SESSION & COOKIE SECURITY (HTTPS Required)
# ============================================================================
SESSION_COOKIE_SECURE=True  # Requires HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=lax

# ============================================================================
# EXTERNAL API CONFIGURATION
# ============================================================================
EXTERNAL_API_KEY=<YOUR_PRODUCTION_API_KEY>
EXTERNAL_API_URL=https://api.external-service.com

# ============================================================================
# LOGGING CONFIGURATION (Production)
# ============================================================================
LOG_LEVEL=WARNING  # WARNING or ERROR for production
LOG_FORMAT=json

# ============================================================================
# SECURITY MIDDLEWARE (ALL ENABLED IN PRODUCTION)
# ============================================================================
ENABLE_SECURITY_HEADERS=True
ENABLE_RATE_LIMITING=True
ENABLE_DDOS_PROTECTION=True
ENABLE_REQUEST_VALIDATION=True
ENABLE_SECURITY_LOGGING=True

# ============================================================================
# RATE LIMITING (Stricter in Production)
# ============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ============================================================================
# PRODUCTION DEPLOYMENT CHECKLIST
# ============================================================================
# Before deploying:
# [ ] Generated new SECRET_KEY
# [ ] Set DEBUG=False
# [ ] Updated all <PLACEHOLDER> values
# [ ] Set strong DATABASE_PASSWORD
# [ ] Configured SMTP with production email service
# [ ] Updated CORS to production domains only
# [ ] Set REDIS_URL with password
# [ ] Verified SESSION_COOKIE_SECURE=True
# [ ] SSL/TLS certificates installed
# [ ] Firewall rules configured
# [ ] Backups automated
# [ ] Monitoring configured
